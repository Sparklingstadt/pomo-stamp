generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  username String  @db.VarChar(50)
  email    String  @unique @db.VarChar(255)
  note     String?

  @@map("users")
}

model Pomodoro {
  id     Int     @id @default(autoincrement())
  uuid   String  @unique
  task   String
  memo   String
  month  Int
  day    Int

  @@map("pomodoros")
}
